<%- include('userHead') %>

<body style="background-color: rgb(22, 22, 22)">
  <div
    style="
      height: 100vh;
      width: 100vw;
      display: flex;
      justify-content: center;
      align-items: center;
    "
  >
    <div
      class="container-fluid d-flex flex-column justify-content-center align-items-center login-main"
    >
      <form
        class="login-container"
        method="post"
        action="/forgot-password-email"
      >
        <h2 style="color: aliceblue">Forgot Password</h2>
        <div class="mb-3">
          <label
            for="exampleInputEmail1"
            class="form-label"
            style="color: aliceblue"
            >Enter your email</label
          >
          <input
            type="email"
            class="form-control login-input"
            id="exampleInputEmail1"
            name="email"
            aria-describedby="emailHelp"
            required
          />
          <% if(typeof duplicate != 'undefined'){ %>
          <b style="color: rgb(218, 128, 128); margin-left: 0px"
            ><%= duplicate %></b
          >
          <% } %> <% if(typeof otpmessage != 'undefined'){ %>
          <b style="color: rgb(250, 112, 112); margin-left: 0px"
            ><%= otpmessage %></b
          >
          <% } %>
        </div>
        <button type="submit" class="btn btn-primary login-btn">Submit</button>
        <div class="container d-flex justify-content-center"></div>
      </form>
    </div>
  </div>
</body>

<%- include('footer') %>
